// ─────────────────────────────────────────────────────────────
// GearKai — Firestore Security Rules
// ─────────────────────────────────────────────────────────────
// Deploy via: Firebase Console → Firestore → Rules tab
// Paste this entire block and click Publish
// ─────────────────────────────────────────────────────────────

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ── Helper functions ────────────────────────────────────
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return request.auth.uid == uid;
    }

    function isAdmin() {
      return isSignedIn() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    // ── users/{userId} ──────────────────────────────────────
    // Users can read/write only their own profile
    // Admins can read any profile
    match /users/{userId} {
      allow read:   if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);          // created on registration
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // ── events/{eventId} ───────────────────────────────────
    // Only admins can create/edit events
    // Assigned users can read their events
    match /events/{eventId} {
      allow read:   if isSignedIn() && (
                      isAdmin() ||
                      request.auth.uid in resource.data.assignedUsers
                    );
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();

      // ── events/{eventId}/participants/{userId} ────────────
      // Admins manage participant data; users read their own
      match /participants/{userId} {
        allow read:   if isOwner(userId) || isAdmin();
        allow write:  if isAdmin();
      }

      // ── events/{eventId}/logs/{logId} ────────────────────
      // Users can write their own logs; admins can read all
      match /logs/{logId} {
        allow read:   if isAdmin() || isOwner(resource.data.userId);
        allow create: if isSignedIn() &&
                         request.auth.uid == request.resource.data.userId &&
                         request.auth.uid in get(/databases/$(database)/documents/events/$(eventId)).data.assignedUsers;
        allow update: if false; // logs are immutable once written
        allow delete: if isAdmin();
      }
    }

    // ── globalLogs/{logId} ─────────────────────────────────
    // Personal food/workout logs — only owner can access
    match /globalLogs/{logId} {
      allow read, write: if isSignedIn() && isOwner(resource.data.userId);
      allow create:      if isSignedIn() && request.auth.uid == request.resource.data.userId;
    }
  }
}
